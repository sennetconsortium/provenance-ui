.c-legend
  font-family $font-family
  padding 20px
  &--filterable
    &:hover
      cursor pointer
    .c-legend__label
      &:hover
        color $col-malibu
  &.has-hover
    .c-legend__color
      opacity .5
  li
    list-style none
  span
    display inline-block
  &__item
    &.has-hover
      .c-legend
        &__color
          opacity 1
        &__label
          color $col-malibu
  &__color
    width 20px
    height 20px
    border-radius 50%
  &__label
    pos-rel()
    line-height 10px
    span
      pos-abs()
      margin-top -16px
      margin-left 5px
