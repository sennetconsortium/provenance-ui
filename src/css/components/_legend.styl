.c-legend
  font-family $font-family
  padding 20px
  &--filterable
    &:hover
      cursor pointer
    .c-legend__label
      &__text
        &:hover
          color $col-malibu
  &__item
    &.is-disabled
      .c-legend__label
        &__text
          color $col-grey !important
          cursor default
          text-decoration line-through

  &.has-hover
    .c-legend__color
      opacity .5
  li
    list-style none
  span
    display inline-block
  &__item
    &.has-hover
      .c-legend
        &__color
          opacity 1
        &__label
          &__text
            color $col-malibu

    &--Edge
      .c-legend__color
        pos-rel()
        top -8px
        height 2px
        border-radius inherit

  &__color
    width 20px
    height 20px
    border-radius 50%
  &__label
    pos-rel()
    line-height 10px
    span
      pos-rel()
      top -5px
      margin-left 5px

