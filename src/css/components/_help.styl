.c-help
  font-family $font-family
  &__body
    font-size .9em
    max-height 500px
    overflow-y auto
  .c-help__btn
    background-color transparent
    width 100px
    border solid 1px $col-pale-sky
    color $col-pale-sky
    border-radius 0
    &:hover
      background-color $col-pale-sky
      color white
    &:focus
      box-shadow 0 0 0 3px rgba(108, 117, 125, 0.5)

  .mgn-v
    margin .9em 0
  h4
    padding 1em 0 .3em
    font-size 1.2em
  h5
    padding-bottom .5em 0
    font-size 1em
  p
    padding .5em 0
  li
    padding .6em 0

  &__title
    color black
    font-family $font-family
    padding-bottom .5em
    border-bottom solid 1px $col-geyser
    text-align left

  .swal2-close
    &:hover
      color $col-malibu

  table
    bx-shadow()
    border-collapse collapse
    background white
    tr
      border 1px solid $col-alto
    td
      padding .75rem
      border solid 1px $col-alto
    th
      padding 1em .75rem
      color white
      background $col-pale-sky

  a, a:visited
    color $col-malibu

  li
    list-style-position inside


