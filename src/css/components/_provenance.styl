.c-provenance
  pos-rel()
  font-family $font-family
  .invisible
    opacity 0 !important
  &.has-hover
    .node:not(.has-hover)
      circle.main, .image.main
        fill #ddd !important
        stroke grey !important
      text
        fill $col-dk-grey !important

  &--Tree
    &.edgeLabels--hidden
      .textPath
        display none
    > svg
      cursor move

    .is-inserted
      display  none

    .links
      &.has-hover
        stroke $col-malibu !important

    #arrowhead
      &.has-hover
        path
          fill $col-malibu !important

    text
      dominant-baseline ideographic

    .node
      &.is-visited:not(.is-primary)
        .glow
          stroke $col-malibu !important
          opacity .3
      &:hover
        .glow
          opacity .5
          stroke $col-malibu !important
      &.node--highlighted
        .glow
          -ms-filter 'progid:DXImageTransform.Microsoft.Alpha(Opacity=50)'
          filter unquote('alpha(opacity=50)')
          opacity .5
          stroke $col-lime !important
          stroke-width 12px
          &.image
            stroke-width 15px
        &.is-secondary
          .glow
            stroke $col-grey

      .main
        cursor pointer
        pointer-events all
      .glow
        fill none
        -ms-filter 'progid:DXImageTransform.Microsoft.Alpha(Opacity=0)'
        filter  unquote('alpha(opacity=0)')
        opacity 0
        stroke $col-malibu
        stroke-width 5px
        &.image
          stroke-width 12px
      .text
        fill white
        &.icon
          font-family FontAwesome


  &__info
    pos-abs()
    top 0
    font-size 16px
    padding 10px
    width 100%
    &__main
      width 98%
    &--close
      cursor pointer
      pos-abs()
      p6()
      right 30px
      &:hover
        color $col-malibu
    .cell
      border 1px solid
      display inline-block
      font-size 14px
      line-height 1.428571429
      margin-left 5px
      margin-top 5px
      padding 6px 12px
      text-decoration none
      &.link
        a
          text-decoration none
          &:after
            font-family 'FontAwesome'
            content '\f08e'
            font-size 11px
          &:hover
            color $col-malibu
            text-decoration underline
      &.flat
        cursor default
      &.class
        color white
      &.property
        background-color white
        border-color $col-silver
        color $col-dk-grey
      &.btn
        margin-left 5px
        margin-top 5px
        opacity 1
      &.info
        background-color $col-chateau
        border 1px solid $col-chateau-2
